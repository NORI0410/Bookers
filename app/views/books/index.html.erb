<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book) %></td>
        <td><%= link_to "edit", edit_book_path(book) %></td>
        <td><%= link_to "destroy", destroy_book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
<% end %>
    </tr>
  </tbody>
</table>
<h2>New book</h2>

